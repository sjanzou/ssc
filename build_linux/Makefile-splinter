VPATH = ../splinter

CC = gcc
CXX = g++
WARNINGS = -Wno-deprecated-declarations
CFLAGS = -fPIC -g $(WARNINGS) -O3 -I../ssc -D__64BIT__ 
CXXFLAGS=-std=c++0x $(CFLAGS)

OBJECTS = \
	bspline.o \
	bsplinebasis.o \
	bsplinebasis1d.o \
	bsplinebuilder.o \
	datapoint.o \
	datatable.o \
	function.o \
	knots.o \
	mykroneckerproduct.o \
	serializer.o \
	utilities.o

TARGET=splinter.a

$(TARGET):$(OBJECTS)
	ar rs $(TARGET) $(OBJECTS)

clean:
	rm -rf $(TARGET) $(OBJECTS)
